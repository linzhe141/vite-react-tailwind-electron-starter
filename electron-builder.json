{
  "appId": "com.example.viteelectronapp",
  "productName": "Vite React Tailwind Electron Starter",
  "directories": {
    "buildResources": "build",
    "output": "dist/electron-builder"
  },
  "files": ["dist/electron/**/*", "dist/app/**/*"],
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage"
  }
}
